<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-list">
                    <span class="sr-only">Toggle Navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"></a>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-list">
                <ul class="nav navbar-nav">
                    <li><a href="/Home/Index"><span class="glyphicon glyphicon-home"></span></a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Services <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu" id="myTab">
                            <li role="presentation"><a href="#Cars" aria-controls="cars" role="tab" data-toggle="tab">Cars</a></li>
                            <li class="divider"></li>
                            <li role="presentation"><a href="#Phones" aria-controls="phones" role="tab" data-toggle="tab">Phones</a></li>
                            <li class="divider"></li>
                            <li role="presentation"><a href="#Other" aria-controls="other" role="tab" data-toggle="tab">Other</a></li>
                            <li class="divider"></li>
                        </ul>
                    </li>
                    <li><a href="/Home/Index#about">About Us</a></li>
                    <li><a href="#">Contact Us</a></li>
                    
                </ul>

                @if (Session["UserId"] != null)
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#" style="color:white">Welcome: @Session["UserName"]</a></li>
                        <li><a href="/Home/Logout">Logout</a></li>
                    </ul>
                }
                else
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="/Home/Login">Login</a></li>
                        <li><a href="/Home/Register">Register</a></li>
                    </ul>
                }
            </div>
        </div>
    </nav>

    @RenderBody()

    @Scripts.Render("~/bundles/bootstrap")

    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

    @RenderSection("scripts", required: false)


</body>
</html>

